<% include ../shared/header %>
<header>
  <h2>Ntalk - Agenda de contatos</h2>
</header>
<section>
  <h4>Bem vindo: <%- user.name %></h4>
  <table class='table'>
    <thead>
      <tr>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      <% if(contacts.length > 0) { %>
        <% contacts.forEach(function(contact, index) { %>
          <tr>
            <td><%- contact.name %></td>
            <td><%- contact.email %></td>
            <td>
              <a href="/contacts/<%- index %>">Detalhes</a>
              <a href="/chat/<%- contact.email %>">Chat</a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</section>
<% include ../shared/exit %>
<% include ../shared/footer %>
